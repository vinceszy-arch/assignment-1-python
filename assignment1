class PlaylistManager:
    def __init__(self):
        self.playlist = []

    def add(self):
        song = input("Enter the name of the song to add: ")
        self.playlist.append(song)
        print(f"'{song}' has been added to the playlist.")

    def remove(self):
        song = input("Enter the name of the song to remove: ")
        if song in self.playlist:
            self.playlist.remove(song)
            print(f"'{song}' has been removed from the playlist.")
        else:
            print(f"Error: '{song}' not found in the playlist.")

    def show(self):
        if not self.playlist:
            print("The playlist is empty.")
        else:
            print("\n--- Current Playlist ---")
            for idx, song in enumerate(self.playlist, start=1):
                print(f"{idx}. {song}")
            print("------------------------\n")

    def menu(self):
        while True:
            print("\n--- Playlist Manager Menu ---")
            print("1. Add a song")
            print("2. Remove a song")
            print("3. Display playlist")
            print("4. Exit")

            choice = input("Enter your choice (1-4): ")

            options = {
                '1': self.add,
                '2': self.remove,
                '3': self.show,
                '4': lambda: print("Exiting playlist manager.")
            }

            if choice in options:
                if choice == '4':
                    options[choice]()
                    break
                else:
                    options[choice]()
            else:
                print("Invalid choice. Please enter a number from 1 to 4.")


if __name__ == "__main__":
    manager = PlaylistManager()
    manager.menu()
